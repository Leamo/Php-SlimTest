{% extends "layout.twig" %}

{% block content %}
	<div class="container">
		<h1>Me contacter</h1>

		{% if flash.success %}
			<div class="alert alert-success">
				{{ flash.success }}
			</div>
		{% endif %}

		{% if flash.error %}
			<div class="alert alert-danger">
				{{ flash.error }}
			</div>
		{% endif %}

		<form action="{{ path_for('contact') }}" method="post">
			<div class="form-group {% if flash.errors.name %}has-error{% endif %}">
				<label for="name">Votre Nom</label>
				<input type="text" name="name" class="form-control" id="name" value="{{ old.name }}" required>
				{% if flash.errors.name %}
					<span class="help-block">{{ flash.errors.name }}</span>
				{% endif %}
			</div>
			<div class="form-group {% if flash.errors.email %}has-error{% endif %}">
				<label for="email">Votre Email</label>
				<input type="email" name="email" class="form-control" id="email" value="{{ old.email }}">
				{% if flash.errors.email %}
					<span class="help-block">{{ flash.errors.email }}</span>
				{% endif %}
			</div>
			<div class="form-group {% if flash.errors.message %}has-error{% endif %}">
				<label for="message">Votre Message</label>
				<textarea type="text" name="message" class="form-control" id="message" required>{{ old.message }}</textarea>
				{% if flash.errors.message %}
					<span class="help-block">{{ flash.errors.message }}</span>
				{% endif %}
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Envoyer">
			</div>
		</form>
	</div>
{% endblock %}